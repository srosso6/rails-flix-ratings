<h3 class="sub-header">Login</h3>
<div class="form-container col-xs-4 col-md-offset-4">
  <%= form_for :session, url: {action: "create"}, html: {class: "login_register"} do |f| %>
    <p class="form-group">
      <%= f.label :username %><br>
      <%= f.text_field :username, class: 'form-control' %>
    </p>
    <p class="form-group">
      <%= f.label :password %><br>
      <%= f.password_field :password, class: 'form-control' %>
    </p>
    <p class="form-group">
      <%= f.submit "Login", class: "login-reg-btn btn btn-default"%>
    </p>
  <% end %>

  <p>New User? <%= link_to 'Sign up here', '/users/new', id: "simple-link" %></p>
</div>
